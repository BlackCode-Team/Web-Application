<!doctype html>
<html lang="en">
  <head>
  	<title>{% block title %} Login {% endblock %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	{%block css%} <link rel="stylesheet" href="{{asset('Login/css/style.css')}}"> {%endblock%}

	</head>
	
	<!--
<body class="img js-fullheight" style="background-image: url({{asset('Login/images/bg.jpg')}});"> -->
<body class="img js-fullheight" style="background-image: url('https://images.pexels.com/photos/4824424/pexels-photo-4824424.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');">
	{%block body%}
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h1 class="heading-section">Login </h1>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
		      	
		      	<form action="#" class="signin-form">
					{{ form_start(form) }}
					<div class="form-group">
						{{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email', 'required': 'required'} }) }}
					</div>
	            <div class="form-group">
					{{ form_widget(form.pwd, { 'attr': {'class': 'form-control', 'placeholder': 'Password', 'required': 'required'} }) }}
					
				</div>


	            <div class="form-group">
	            	<button  type="submit" class="form-control btn btn-primary submit px-3">{{ button_label|default('Sign In') }}</button>
	            </div>
	            <div class="form-group d-md-flex">
	            	<div class="w-50">
		            	<label class="checkbox-wrap checkbox-primary">Remember Me
									  <input type="checkbox" checked>
									  <span class="checkmark"></span>
									</label>
								</div>
								<div class="w-50 text-md-right">
									<a href="#" style="color: #fff">Forgot Password</a>
								</div>
	            </div>
	          </form>
	          <p class="w-100 text-center">Don't have an account ? </p>
	          <div class="social d-flex text-center">
	          	<a href="{{ path('app_register') }}" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Register</a>

	          	
	          </div>
		      </div>
				</div>
			</div>
		</div>
	</section
{%block js%}
<script src="{{asset('Login/js/jquery.min.js')}}"></script>
  <script src="{{asset('Login/js/popper.js')}}"></script>
  <script src="{{asset('Login/js/bootstrap.min.js')}}"></script>
  <script src="{{asset('Login/js/main.js')}}"></script>
{%endblock%}
  {%endblock%}
	</body>

	
</html>

